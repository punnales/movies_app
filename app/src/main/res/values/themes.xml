<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_variant</item>
        <item name="colorOnPrimary">@color/white</item>


        <item name="colorSurface">@color/black_variant</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="android:colorBackground">@color/black_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="MovieApp.TextInputLayout" parent="">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/MovieApp.TextInputShapeAppearance</item>
    </style>

    <style name="MovieApp.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">textPassword</item>
        <item name="maxLines">1</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="textInputLayoutFocusedRectEnabled">true</item>
    </style>

    <style name="MovieApp.PrimaryButtonShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Image" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">10%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.Card" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeTopRight">10%</item>
    </style>

    <style name="MovieApp.ShapeAppearance.CircleComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MovieApp.TextInputShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">20%</item>
    </style>

    <style name="MoviesAppProgressLoaderTheme" parent="Theme.MoviesApp">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>