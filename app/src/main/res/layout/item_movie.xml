<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_item_movie_image"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Image"
        tools:layout_marginTop="100dp"
        tools:layout_width="100dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_item_movie_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_movie_image"
        app:layout_constraintStart_toStartOf="@id/iv_item_movie_image"
        app:layout_constraintTop_toBottomOf="@id/iv_item_movie_image"
        tools:text="Movie name" />


</androidx.constraintlayout.widget.ConstraintLayout>